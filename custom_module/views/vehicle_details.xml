<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[position()=8]" position="after">
                <button name="%(custom_module.action_vehicle_data)d" type="action"
                    data-hotkey="v"
                    string="Add Vehicle Info" class="btn-primary"
                    attrs="{'invisible': [('is_add_vehicle_data', '!=', False)]}" />
                <button
                    name="button_update_vehicle_data"
                    type="object"
                    string="Update Details" class="oe_highlight" />

            </xpath>
        </field>
    </record>
</odoo>